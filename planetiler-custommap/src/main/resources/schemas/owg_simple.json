{
  "schemaName": "OWG Simple Schema",
  "schemaDescription": "Simple vector tile schema",
  "attribution": "<a href=\"https://www.openstreetmap.org/copyright\" target=\"_blank\">&copy; OpenStreetMap contributors</a>",
  "layers": [
    {
      "name": "water",
      "features": [
        {
          "sources": ["osm"],
          "zoom": [0, 14],
          "includeWhen": {
            "geometry": ["polygon"],
            "tag": {"key": "natural", "value": ["water"]}
          },
          "attributes": [
            {"key": "natural", "constantValue": "water", "minZoom": 0},
            {
              "key": "intermittent",
              "constantValue": "true",
              "dataType": "boolean",
              "includeWhen": {"key": "intermittent", "value": [true]}
            },
            {
              "key": "name",
              "tagValue": "name",
              "dataType": "string",
              "includeWhen": {"minTileCoverSize": 0.01},
              "excludeWhen": {
                "key": "water",
                "value": ["river", "canal", "stream"]
              }
            }
          ]
        },
        {
          "sources": ["water_polygons"],
          "zoom": [0, 14],
          "includeWhen": {"geometry": ["polygon"]},
          "attributes": [
            {"key": "natural", "constantValue": "water", "minZoom": 0}
          ]
        }
      ]
    }
  ]
}